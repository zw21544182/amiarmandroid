<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

    <style name="dialog_node" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
    </style>

    <style name="GrideItme">
        <item name="android:padding">3dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/bg_edittext_normal</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColorHint">@color/colorheadLine</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/bg_edittext_normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:button">@null</item>
    </style>
    <!--android:button="@null"-->
    <!--android:drawableLeft="@drawable/drawable_radio"-->

    <style name="CheckBox_Style">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/drawable_radio</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="Radio_Switch_Style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/drawable_radio</item>
        <item name="android:layout_marginLeft">20dp</item>

    </style>

    <style name="Bottom_Tab_Style">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/bg_settingitme</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
