<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:anroid="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:background="@color/colorBackgroud"
    tools:context="cn.ml_tech.mx.mlproj.YpjcFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="300dp"
          android:layout_marginBottom="30dp"
          android:text="检测类型："
          android:textSize="9pt" />
      <RadioGroup android:id="@+id/rgType"
          android:contentDescription="检测类型"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="400dp">
         <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rbNew" android:text="创建新检测" android:checked="true"></RadioButton>
         <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rbContinue" android:text="继续上次检测"></RadioButton>
      </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:paddingLeft="400dp"
        >
        <Button
            android:id="@+id/btPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一步" />

        <Button
            android:id="@+id/btNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步" />
    </LinearLayout>


</FrameLayout>
