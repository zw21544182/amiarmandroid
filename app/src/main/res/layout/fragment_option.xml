<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    tools:context="cn.ml_tech.mx.mlproj.cn.ml_tech.mx.fragment.OptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="0dp">
            <!--app:srcCompat="@drawable/csbd"-->
            <ImageButton
                android:id="@+id/ibCsbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/csbd" />

            <ImageButton
                android:id="@+id/ibYpjc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ypjc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_margin="0dp"
            android:gravity="top"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/ibSjcx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sjcx" />

            <ImageButton
                android:id="@+id/ibXtwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xtwh" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
