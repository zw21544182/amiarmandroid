<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackgroud"
    tools:context="cn.ml_tech.mx.mlproj.YpjcFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:background="@drawable/bgitme_layout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvType"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测类型：" />

        <RadioGroup
            android:id="@+id/rgType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvType"
            android:layout_below="@id/tvType"
            android:contentDescription="检测类型"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="创建新检测"></RadioButton>

            <RadioButton
                android:id="@+id/rbContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续上次检测"></RadioButton>
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/rgType"
            android:layout_below="@id/rgType"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btPre"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一步" />

            <Button
                android:id="@+id/btNext"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一步" />
        </LinearLayout>
    </RelativeLayout>

    <!--</LinearLayout>-->

</FrameLayout>


