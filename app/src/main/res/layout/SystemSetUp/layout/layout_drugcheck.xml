<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="样品检测" />

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="快速查询" />

        <CheckBox
            android:id="@+id/cbKsLook"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbKsExc"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="增加药品" />

        <CheckBox
            android:id="@+id/cbJyLook"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbJyAdd"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加" />

        <CheckBox
            android:id="@+id/cbJyExc"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="药品信息" />

        <CheckBox
            android:id="@+id/cbYxLook"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbYxModify"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改" />

        <CheckBox
            android:id="@+id/cbYxDelete"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="开始检测" />

        <CheckBox
            android:id="@+id/cbKjLook"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbKjExc"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="数据导出" />

        <CheckBox
            android:id="@+id/cbSdLook"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbSdExp"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出" />


        <CheckBox
            android:id="@+id/cbSdExc"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="添加药厂信息" />

        <CheckBox
            android:id="@+id/cbTcLook"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbTcAdd"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加" />

        <CheckBox
            android:id="@+id/cbTcExc"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="旋瓶参数" />

        <CheckBox
            android:id="@+id/cbXcModfy"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="统计结果阈值" />

        <CheckBox
            android:id="@+id/cbTyModify"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="样品检测" />


        <CheckBox
            android:id="@+id/cbYjLook"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbYjExc"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

    </LinearLayout>
</LinearLayout>