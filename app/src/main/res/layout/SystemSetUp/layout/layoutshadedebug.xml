<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="5"
    android:orientation="horizontal"
    android:rowCount="3">

    <TextView
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorSendSpeed" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorShadeParam" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorRunState"

        />

    <EditText
        android:id="@+id/etShadeMotorSpeed"

        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etShadeMotorParam"
        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txtShadeRunState"

        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnShadeMotorParam"

        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorShadeParam" />
    <Button
        android:id="@+id/btnShadeMotorReset"
        style="@style/ButtonStyle"

        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:layout_row="2"
        android:text="复位" />
    <Button
        android:id="@+id/btnShadeMotorStart"
        style="@style/ButtonStyle"

        android:layout_column="3"
        android:layout_marginTop="5dp"
        android:layout_row="2"
        android:text="@string/motorStart" />

    <Button
        android:id="@+id/btnShadeMotorWrite"

        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/motorWrite" />
</GridLayout>
