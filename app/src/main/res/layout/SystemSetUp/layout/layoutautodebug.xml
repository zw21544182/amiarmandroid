<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="3"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:rowCount="2">

    <Button
        android:id="@+id/btnAutoRun"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/machineAutoDebug" />

    <EditText
        android:id="@+id/etAutoCount"
        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:text="@string/motorAutoDebugOpenWindow" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorAutoDebugBinary"

        />

    <Button
        android:id="@+id/btnAutoSet"

        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorAutoDebugSet" />


</GridLayout>
