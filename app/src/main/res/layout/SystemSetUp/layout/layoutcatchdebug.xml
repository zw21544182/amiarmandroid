<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="5"
    >
    <TextView
        android:text="@string/motorMachineHandCatchMaxDistance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        />
    <TextView
        android:text="@string/motorCatchPutterMoveDistance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:text="@string/motorMachineHandOpenDistance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <EditText
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/etCatchMaxDiatance"

        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etCatchPutterDistance"
        android:layout_width="match_parent"

        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etCatchOpenDistance"
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorCatchCal"
        />

    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/motorSendSpeed"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:text="@string/motorCatchParam1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:text="@string/motorCatchParam2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:text="@string/motorCatchDelayTime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:text="@string/motorRunState"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCatchSpeed"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCatchParam1"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCatchParam2"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCatchDelayTime"
        />

    <TextView
        android:id="@+id/txtCatchRunState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_row="4"
        android:layout_column="3"
        android:id="@+id/btnSendMotorStart"
        android:text="@string/motorStart"
        />
    <Button
        android:layout_row="4"
        android:layout_column="4"
        android:id="@+id/btnSendMotorWrite"
        android:text="@string/motorWrite"
        />
</GridLayout>
