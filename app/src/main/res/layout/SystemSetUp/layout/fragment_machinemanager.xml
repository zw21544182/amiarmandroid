<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_factory_layout"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/UserAbbreviation" />

            <EditText
                android:id="@+id/etUserAbbreviation"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/UserName" />

            <EditText
                android:id="@+id/etUserName"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/MachineSn" />

            <EditText
                android:id="@+id/etMachineNumber"

                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/MachineType" />

            <EditText
                android:id="@+id/etMachineType"

                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/MachineName" />

            <EditText
                android:id="@+id/etMachineName"

                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/MachineFactoryName" />

            <EditText
                android:id="@+id/etMachineFactoryName"

                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TextViewStyle"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MachineDateOfProduction" />

            <EditText
                android:id="@+id/etMachineDateOfProduction"

                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnSave"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Save" />

            <Button
                android:id="@+id/btnResver"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/Resver" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
