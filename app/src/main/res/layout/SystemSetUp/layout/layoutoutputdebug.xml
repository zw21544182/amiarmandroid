<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="5"
    android:columnCount="5"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorOutPut10mlStandardParam1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorOutPut10mlStandardParam2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorOutPut10mlStandardDiameter"
        />
    <EditText
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/etOutPut10mlStandardParam1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etOutPut10mlStandardParam2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etOutPut10mlStandardParamDiameter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <Button
        android:id="@+id/btnOutPutCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorCatchCal"
        />
    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorSendSpeed"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorOutPut10mlStandardParam1"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorOutPut10mlStandardParam2"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorRunState"
        />
    <EditText
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/etOutPut10mlStandardSpeed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etOutPutParam1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etOutPutParam2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtOutPutRunState"
        />

    <Button
        android:layout_row="4"
        android:layout_column="3"
        android:text="@string/motorStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOutPutStart"
        />
    <Button
        android:text="@string/motorWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOutPutWrite"
        />
</GridLayout>
