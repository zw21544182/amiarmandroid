<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="检测数据查询" />

        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="历史记录查询" />

        <CheckBox
            android:id="@+id/ckLcLook"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/ckLcQue"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询" />

        <CheckBox
            android:id="@+id/cbLcExc"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

        <CheckBox
            android:id="@+id/cbLcSel"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅自己" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="查询" />

        <CheckBox
            android:id="@+id/cbCxLook"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbCxQue"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询" />

        <CheckBox
            android:id="@+id/cbCxExc"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

        <CheckBox
            android:id="@+id/cbCxSelf"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅自己" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="检测信息" />

        <CheckBox
            android:id="@+id/cbJxLook"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbJxDelete"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除" />

        <CheckBox
            android:id="@+id/cbJxExp"
            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出" />

        <CheckBox
            android:id="@+id/cbJxDet"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            style="@style/TextViewStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:gravity="start"
            android:text="检测数据查询" />

        <CheckBox
            android:id="@+id/cbJsLook"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看" />

        <CheckBox
            android:id="@+id/cbJsExc"

            style="@style/CheckBox_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执行" />

    </LinearLayout>


</LinearLayout>