<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout">
    <TextView
        android:text="@string/debugDiameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        />
    <EditText
        android:id="@+id/etDebugDiameter"
        android:minWidth="50dp"
        android:maxWidth="70dp"

        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="@string/readTrayNumber"
        android:id="@+id/btnReadTray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/laserSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="@string/laserOpen"
        android:id="@+id/btnLaserSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnMotorReset"
        android:text="@string/motorReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnMotorLockSwitch"
        android:text="@string/motorRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnParamSave"
        android:text="@string/paramSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ScrollView
        android:layout_below="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_below="@id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/layoutsenddebug"/>
            <include layout="@layout/layoutmachinehanddebug"/>
            <include layout="@layout/layoutcatchdebug"/>
            <include layout="@layout/layoutpresseddebug"/>
            <include layout="@layout/layoutshadedebug"/>
            <include layout="@layout/layoutrotatedebug"/>
            <include layout="@layout/layoutoutputdebug"/>
            <include layout="@layout/layoutautodebug"/>

        </LinearLayout>
