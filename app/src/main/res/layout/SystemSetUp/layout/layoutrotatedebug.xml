<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="3">

    <TextView
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorSendSpeed" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorRunState"

        />

    <EditText
        android:id="@+id/etRotateMotorSpeed"
        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:inputType="numberDecimal" />


    <TextView
        android:id="@+id/txtShadeRunState"

        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnRotateMotorStart"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/motorStart" />

    <Button
        android:id="@+id/btnRotateMotorStop"

        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/motorStop" />
</GridLayout>
