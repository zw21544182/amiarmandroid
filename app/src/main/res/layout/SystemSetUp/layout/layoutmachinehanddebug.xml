<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="5"
    android:orientation="horizontal"
    android:rowCount="4">

    <TextView
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorSendSpeed" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorMachineHandCatchLocation" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorMachineHandDetLocation"

        />

    <TextView
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorMachineHandWaitLocation" />

    <TextView
        style="@style/TextViewStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorMachineHandOutPutLocation" />

    <EditText
        android:id="@+id/etMachineHandMotorSpeed"

        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etMachineHandMotorCatchLocation"

        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etMachineHandMotorDetLocation"

        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etMachineHandMotorWaitLocation"

        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etMachineHandMotorOutPutLocation"

        style="@style/EditTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        style="@style/ButtonStyle"
        android:layout_column="2" />

    <Button
        android:id="@+id/btnMachineHandMotorReset"
        style="@style/ButtonStyle"
        android:layout_column="2"
        android:layout_row="3"
        android:text="复位" />

    <TextView
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:text="@string/motorRunState" />

    <TextView
        android:id="@+id/txtMachineHandMotorState"

        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:text="@string/motorRunState" />

    <Button
        android:id="@+id/btnMachineHandMotorStart"
        style="@style/ButtonStyle"
        android:layout_column="3"
        android:layout_row="3"
        android:text="@string/motorStart" />


    <Button
        android:id="@+id/btnMachineHandMotorWrite"
        style="@style/ButtonStyle"
        android:layout_column="4"
        android:layout_row="3"
        android:text="@string/motorWrite" />
</GridLayout>
